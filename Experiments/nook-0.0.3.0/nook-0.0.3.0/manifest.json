{
  "name": "Nook",
  "description": "Nook is an extension that plays Animal Crossing hourly themes on the hour.",
  "version": "0.0.2.5",
  "manifest_version": 2,
  "icons": {
    "128": "icons/128.png"
  },
  "browser_action": {
    "default_title": "Nook",
    "default_popup": "popup/options.html"
  },
  "background": {
    "scripts": ["src/howler.js", "src/timehandler.js", "src/options.js", "src/actions.js" ],
    "persistent": true
  },
  "permissions": [
      "storage"
  ]
}
